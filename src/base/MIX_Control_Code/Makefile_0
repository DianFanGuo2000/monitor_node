#LIBTRDP	
SRC_TRDP := $(wildcard ./TRDP/*.c) 
DEPS_TRDP := $(patsubst %.c,%.d,$(SRC_TRDP))
OBJS_TRDP := $(patsubst %.c,%.o,$(SRC_TRDP))

$(LIBTRDP):$(OBJS_TRDP)
