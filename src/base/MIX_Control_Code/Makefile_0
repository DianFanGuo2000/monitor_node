
LIBVOS    =libvos.a 
LIBINTERFACE  = libinter.a
LIBUDP   = libudp.a
LIBDACP   = libdacp.a
LIBBASE   =  libbase.a
LIBTRDP   =  libtrdpsrc.a


McmMain = mcm
McmDebug = debug


CROSS_COMPILE=/home/cjy/work/buildroot-2019.02.1/output/host/usr/bin/aarch64-buildroot-linux-gnu-


CC = $(CROSS_COMPILE)gcc
OBJCOPY = $(CROSS_COMPILE)objcopy
OBJDUMP = $(CROSS_COMPILE)objdump
NM = $(CROSS_COMPILE)nm
CPPFLAGS =

LDFLAGS =
CFLAGS = -Wall -ggdb3 -lrt -lpthread 

CPPFLAGS += -I$(abspath ./DACP)
CPPFLAGS += -I$(abspath ./DBG)
CPPFLAGS += -I$(abspath ./FILE_TRANSFER)
CPPFLAGS += -I$(abspath ./UDP)
CPPFLAGS += -I$(abspath ./VOS)
CPPFLAGS += -I$(abspath ./INTERFACE)
CPPFLAGS += -I$(abspath ./BASE)
CPPFLAGS += -I$(abspath ./TRDP)
CPPFLAGS += -I$(abspath ./MCM)

#CPPFLAGS += -DOS_NO_C_LIB_DEFINES

COMPILE = $(CC) $(CPPFLAGS) $(CFLAGS) -c
LINKCC = $(CC) 
LINKAR = ar 
#LIBA = -lvos -ludp -linter -ldacp -ltrdp -lrt -lpthread 
LIBA = -Wl,--gc-sections -Wl,--start-group -linter -ldacp -lbase -ltrdp -ltrdpsrc -lrt -lpthread -lvos -ludp -Wl,--end-group

#LIBVOS	
SRC_VOS := $(wildcard ./VOS/*.c) 
DEPS_VOS := $(patsubst %.c,%.d,$(SRC_VOS))
OBJS_VOS := $(patsubst %.c,%.o,$(SRC_VOS))

$(LIBVOS):$(OBJS_VOS)
	$(LINKAR) -rsv $(LIBVOS) $(OBJS_VOS) 
%.d:%.c     
	$(CC) -MM $(CPPFLAGS) $< > $@
%.o:%.c
	$(COMPILE) $< -o $@



#LIBINTERFACE	
SRC_INTERFACE := $(wildcard ./INTERFACE/*.c) 
DEPS_INTERFACE := $(patsubst %.c,%.d,$(SRC_INTERFACE))
OBJS_INTERFACE := $(patsubst %.c,%.o,$(SRC_INTERFACE))

$(LIBINTERFACE):$(OBJS_INTERFACE)
	$(LINKAR) -rsv $(LIBINTERFACE) $(OBJS_INTERFACE) 
%.d:%.c     
	$(CC) -MM $(CPPFLAGS) $< > $@
%.o:%.c
	$(COMPILE) $< -o $@


#LIBDACP	
SRC_DACP := $(wildcard ./DACP/*.c) 
DEPS_DACP := $(patsubst %.c,%.d,$(SRC_DACP))
OBJS_DACP := $(patsubst %.c,%.o,$(SRC_DACP))

$(LIBDACP):$(OBJS_DACP)
	$(LINKAR) -rsv $(LIBDACP) $(OBJS_DACP) 
%.d:%.c     
	$(CC) -MM $(CPPFLAGS) $< > $@
%.o:%.c
	$(COMPILE) $< -o $@
		
	
#LIBUDP	
SRC_UDP := $(wildcard ./UDP/*.c) 
DEPS_UDP := $(patsubst %.c,%.d,$(SRC_UDP))
OBJS_UDP := $(patsubst %.c,%.o,$(SRC_UDP))

$(LIBUDP):$(OBJS_UDP)
	$(LINKAR) -rsv $(LIBUDP) $(OBJS_UDP) 
%.d:%.c     
	$(CC) -MM $(CPPFLAGS) $< > $@
%.o:%.c
	$(COMPILE) $< -o $@


#LIBBASE	
SRC_BASE := $(wildcard ./BASE/*.c) 
DEPS_BASE := $(patsubst %.c,%.d,$(SRC_BASE))
OBJS_BASE := $(patsubst %.c,%.o,$(SRC_BASE))

$(LIBBASE):$(OBJS_BASE)
	$(LINKAR) -rsv $(LIBBASE) $(OBJS_BASE) 
%.d:%.c     
	$(CC) -MM $(CPPFLAGS) $< > $@
%.o:%.c
